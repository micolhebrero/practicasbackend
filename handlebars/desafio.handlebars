<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color:red ;">Agregar producto</h1>
        <br>

        <form action="/productos.txt" method="post">

        <div class="form-group">
            <label for="title">Titutlo</label>
            <input id="title" class="form-control" type="text" name="title">
        </div>

        <div class="form-group">
            <label for="price">Precio</label>
            <input id="price" class="form-control" type="text" name="price">
        </div>
        <div class="form-group">
            <label for="foto">Foto</label>
            <input id="foto" class="form-control" type="text" name="foto">
        </div>

        </form>

        <h2 style="color:#467 ;">Historial</h2>

        {{#if productos.length}}
        <div class="table-responisve">
            <table class="table table-dark">
                <tr style="color:green ;">
                    <th>Titutlo</th>
                    <th>Precio</th>
                    <th>Foto</th>
                </tr>
                {{#each productos}}
                <tr>
                    <td>
                        {{this.title}}
                    </td>
                    <td>
                        {{this.price}}
                    </td>
                    <td>
                        <img style="width: 50px" src="{{this.foto}}" alt="{{this.titulo}}">

                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{else}}
        <h3 class="alert alert-danger">No hay productos</h3>
        {{/if}}
    </div>
</div>